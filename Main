def number_validator(x):  #checks if input is a float
	global t
	try:
		x = float(x)

		if x <= 0:
			x = input("please enter a positive number: ")
			number_validator(x)
		t = x
	except:
		t = input("please enter a number: ")
		number_validator(t)
